<% include base.ejs%>
<body>

<div class="container">

    <%- messages('messages', locals) %>
    <div class="row">
        <form class="col s12" method="POST" action="Verify">
            <div class="input-field col s12">
                <input id="last_name" name="username" type="text" class="validate">
                <label for="last_name">Please Enter Your Email</label>
            </div>


            <div class="row">
                <div class="input-field col s12">
                    <input id="token" type="text" name="token" class="validate">
                    <label for="token">One Time Password</label>
                </div>
            </div>
            <div class="row">
                <input type="submit" class="btn" value="Sign In!">
            </div>

        </form>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>