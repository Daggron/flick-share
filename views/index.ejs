<!DOCTYPE html>
<html>
    <head>
        <title>
            LovedIn
        </title>
        <meta name="viewport" content="width=device-width , initial-scale=1.0">
        <meta name="Author" content="Lord Abhay Sharma Himself">
        <meta name="Description" content="A dating website">
        <meta name="keywords" content="Lovedin , Dating,Chitkara Lovedin">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link rel="stylesheet" href="css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Akronim&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    </head>
    <body>

         <%- include  navbar.ejs%>
        

         <%- messages('messages', locals) %>

         <% if (users){ %>
        <div class="container">
          <div class="outer-box">
              <% for(var i=posts.length-1;i>=0;i--){ %>
              <div class="inbox">
                  <div class="post-container">
                      <% if(users._id==posts[i].posted){ %>

                      <%}%>
                      <div class="post-image">
                        <!-- <img src="<%= posts[i].image %>"> -->
                        <img src="<%= typeof posts[i].image != 'undefined' ? posts[i].image : '' %>">
                      </div>
                      <div class="time-stamp">
                          <p>
                              <em><%= posts[i].timeStamp%></em>
                          </p>
                      </div>
                      <div class="post-caption">
                          <p class="caption">
                              <strong class="user-name">
                                  <%= posts[i].author %>
                              </strong>

                          <p><span><%= posts[i].caption %></span></p>
                          <% if(users._id==posts[i].posted){%>
                          <div class="del">
                              <a href="home/<%=posts[i].id%>" data-id="<%= posts[i].id %>" class="btn del-post" >Delete Post</a>
                          </div>
                          <%}%>

                          </p>


                      </div>
                     
                </div>
              </div>
              <% } %>
          </div>
        </div>
        <% } else { %>

            <div class="container">
                <h1>Please Log in! In order to see the posts</h1>
            </div>

            <% } %>
                
        <script src="/js/main.js"></script>
        <script src="/js/del.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </body>
</html>