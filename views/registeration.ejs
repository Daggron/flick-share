<!DOCTYPE html>
<html>
<head>
    <title>
        LovedIn
    </title>
    <meta name="viewport" content="width=device-width , initial-scale=1.0">
    <meta name="Author" content="Lord Abhay Sharma Himself">
    <meta name="Description" content="A dating website">
    <meta name="keywords" content="Lovedin , Dating,Chitkara Lovedin">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Akronim&display=swap" rel="stylesheet">
    <script src="/js/particles.min.js"></script>
</head>
<body>
<section class="register">

    <div id="particles-js"></div>
    <div class="heading">
        <h1>
            <span class="funky-text">Regis</span><span class="spunky-text">ter Here</span>
        </h1>
    </div>

    <div class="container">

        <%- messages('messages', locals) %>
        <% if(errors){ %>
            <% for(var i = 0;i < errors.length;i++){ %>
                <p><%= errors[i].msg %></p>
        <% }} %>

        <div class="row">

            <form class="col s12 register-form" method="POST" action="register" enctype="multipart/form-data">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Placeholder" name="name" id="first_name" type="text" class="validate">
                        <label for="first_name">Your Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="last_name" name="username" type="text" class="validate">
                        <label for="last_name">User Name</label>
                    </div>
                </div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Profile Photo</span>
                        <input name="profilephoto" type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
                <div class="input-field col s12">
                    <input id="bio" name="bio" type="text" class="validate">
                    <label for="bio">Bio</label>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate" name="email">
                        <label for="email">Email</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input id="phoneNumber" type="tel" class="validate" name="phoneNumber">
                        <label for="phoneNumber">Enter Phone Number</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" name="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password2" type="password" name="password2" class="validate">
                        <label for="password2">Confirm Password</label>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" class="btn" value="Sign Up!">
                </div>

            </form>
        </div>
    </div>

</section>
<script>
    particlesJS.load('particles-js', '/js/particles.json', function() {
        console.log('callback - particles.js config loaded');
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>